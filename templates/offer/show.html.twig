{% extends 'base.html.twig' %}

{% block title %}Détails de l'offre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .offer-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .offer-title {
            color: #2c3e50;
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #3498db;
        }
        
        .offer-details {
            margin-bottom: 2rem;
        }
        
        .offer-field {
            margin-bottom: 1rem;
        }
        
        .offer-label {
            font-weight: bold;
            color: #7f8c8d;
            font-size: 14px;
            display: block;
            margin-bottom: 0.3rem;
        }
        
        .offer-value {
            padding: 0.7rem;
            background-color: #f8f9fa;
            border-radius: 4px;
            border-left: 3px solid #3498db;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 1.5rem;
        }
        
        .btn {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }
        
        .btn-primary {
            background-color: #3498db;
            color: white;
        }
        
        .btn-warning {
            background-color: #f39c12;
            color: white;
        }
        
        .btn-secondary {
            background-color: #95a5a6;
            color: white;
        }
        
        .btn-danger {
            background-color: #e74c3c;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="offer-container">
        <h1 class="offer-title">{{ offer.title }}</h1>
        
        <div class="offer-details">
            <div class="offer-field">
                <div class="offer-label">ID</div>
                <div class="offer-value">{{ offer.id }}</div>
            </div>
            
            <div class="offer-field">
                <div class="offer-label">Description</div>
                <div class="offer-value">{{ offer.description }}</div>
            </div>
            
   
        </div>
        
        <div class="action-buttons">
            <a href="{{ path('app_offers') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_offer_edit', {'id': offer.id}) }}" class="btn btn-warning">Modifier</a>
            
            <form method="post" action="{{ path('app_offer_delete', {'id': offer.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}